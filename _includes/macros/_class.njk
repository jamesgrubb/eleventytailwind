{% from "./_page-title.njk" import title %}
{% macro class (title, lockdown = true, description) %}
    <h2>{{ title }}</h2>
    {% if lockdown %}
        <div class="flex w-full flex-wrap sm:mt-16">
            <figure class="flex w-full sm:w-2/5 relative my-16 sm:my-auto">
                <img class="w-full max-w-full h-auto md:w-56 lg:w-64"
                src="https://res.cloudinary.com/makingthings/image/upload/v1597249381/yoga/zoom.jpg"
                alt="Lessons on zoom">
                <figcaption
                class="absolute right-0 p-2 text-right md:text-left md:p-0 w-1/3 sm:w-2/5 md:w-full md:static sm:ml-4 text-sm">
                All lesson hosted online
            </figcaption>
            </figure>
            <p class="sm:w-1/2 sm:ml-auto ">
                {{ description }}
            </p>
        </div>
    {% endif %}